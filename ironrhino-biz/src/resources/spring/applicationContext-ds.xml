<beans default-autowire="byName"
	xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close" p:url="${jdbc.url}" p:username="${jdbc.username}"
		p:password="${jdbc.password}" p:driverClassName="${jdbc.driverClassName}"
		p:poolPreparedStatements="true" p:removeAbandoned="true"
		p:initialSize="${dataSource.initialSize}" p:maxActive="${dataSource.maxActive}"
		p:maxIdle="${dataSource.maxIdle}" p:minIdle="${dataSource.minIdle}"
		p:maxWait="${dataSource.maxWait}" />
</beans>
