<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ironrhino.biz.model"
	default-lazy="true">
	<class name="Order" table="orders" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.String" length="32" unsaved-value="null">
			<generator class="org.ironrhino.core.hibernate.StringIdGenerator" />
		</id>
		<natural-id>
			<property name="code" not-null="true" />
		</natural-id>
		<version name="version" column="version" access="field" />
		<property name="discount" />
		<property name="freight" />
		<property name="grandTotal" />
		<property name="saleType">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">
					com.ironrhino.biz.model.SaleType
				</param>
				<param name="useNamed">
					false
				</param>
			</type>
		</property>
		<property name="paid" />
		<property name="shipped" />
		<property name="orderDate" />
		<property name="shipDate" />
		<property name="payDate" />
		<property name="createDate" />
		<property name="modifyDate" />
		<property name="memo" length="2500" />
		<many-to-one name="customer" column="customerId" not-null="true"
			lazy="proxy" />
		<many-to-one name="station" column="stationId" lazy="proxy" />
		<many-to-one name="salesman" column="salesmanId" lazy="proxy" />
		<many-to-one name="deliveryman" column="deliverymanId"
			lazy="proxy" />
		<many-to-one name="createUser" lazy="proxy" not-found="ignore" />
		<many-to-one name="modifyUser" lazy="proxy" not-found="ignore" />
		<list name="items" table="orderitem" cascade="all" lazy="true"
			fetch="select">
			<key column="orderId" />
			<list-index column="lineNumber" />
			<composite-element class="OrderItem">
				<parent name="order" />
				<many-to-one name="product" column="productId" not-null="true"
					lazy="false" fetch="join" />
				<property name="quantity" />
				<property name="price" />
			</composite-element>
		</list>
	</class>
</hibernate-mapping>