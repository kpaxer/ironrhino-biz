<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ironrhino.biz.model"
	default-lazy="true">
	<class name="Order" table="orders" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.String"  unsaved-value="null">
			<generator class="org.ironrhino.core.hibernate.StringIdGenerator" />
		</id>
		<natural-id>
			<property name="code" not-null="true" />
		</natural-id>
		<property name="orderDate" />
		<property name="description" />
		<property name="printed" />
		<many-to-one name="customer" column="customerId" not-null="true" />
		<list name="items" table="orderItem" cascade="all">
			<key column="orderId" />
			<list-index column="lineNumber" />
			<composite-element class="OrderItem">
				<property name="name" />
				<property name="unit" />
				<property name="quantity" />
				<property name="price" />
			</composite-element>
		</list>
	</class>
</hibernate-mapping>