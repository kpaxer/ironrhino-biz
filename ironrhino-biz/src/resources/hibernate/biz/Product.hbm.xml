<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ironrhino.biz.model"
	default-lazy="true">
	<class name="Product" table="product" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.Long" unsaved-value="null">
			<generator class="identity" />
		</id>
		<natural-id mutable="true">
			<property name="name" not-null="true" />
			<many-to-one name="category" column="categoryId" not-null="true" lazy="false" fetch="join" />
			<many-to-one name="brand" column="brandId" not-null="true"  lazy="false" fetch="join" />
		</natural-id>
		<property name="stock" />
		<property name="shopStock" />
		<property name="weight" />
		<property name="price" />
		<property name="attributesAsString" column="attributes" length="1024"/>
		<property name="displayOrder" />
	</class>
</hibernate-mapping>