<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ironrhino.biz.model"
	default-lazy="true">
	<class name="Customer" table="customer" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.Long" unsaved-value="null">
			<generator class="identity" />
		</id>
		<natural-id mutable="true">
			<property name="name" not-null="true"/>
		</natural-id>
		<property name="nameAsPinyin"/>
		<property name="nameAsPinyinAbbr"/>
		<property name="address" />
		<property name="linkman" />
		<property name="phone" />
		<property name="mobile" />
		<property name="fax" />
		<property name="memo" length="2500" />
		<property name="activeDate" index="activeDate" />
		<property name="createDate" />
		<property name="tagsAsString" type="java.lang.String" column="tags" length="500"/>
		<many-to-one name="region" column="regionId" lazy="false"
			fetch="join" />
	</class>
</hibernate-mapping>